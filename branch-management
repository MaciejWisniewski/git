#create new branch based on current
git checkout base-branch
git checkout -b new-branch

#short way to create new branch from base branch
git checkout -b new-branch base-branch

#delete all stale remote-tracking branches under <name> (branches deleted in remote but still seen as remote/origin locally)
git remote prune origin

#remove local branch
git branch -d branch_name

#remove specific stale branch
git branch -d -r origin/branchname

#[git-flow] create new feature branch based on another feature
git flow feature start new-feature feature/base-feature


