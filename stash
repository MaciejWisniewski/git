#create a stash
git stash

#create with a custom message to easily identify stashes
git stash push -m "message"

#list all stashes showing their messages
git stash list

#apply stash from the list at index @{0}
git stash apply "stash@{0}"

#reapply previously stashed changes
git stash pop 
git stash apply

#drop top stash - stash@{0}
git stash drop 
# drop specific stash - see git stash list
git stash drop "stash@{0}"

